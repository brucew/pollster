<%= simple_nested_form_for(@poll) do |f| %>
    <%= display_base_errors @poll %>

    <%= f.input :question, input_html: { rows: '10' },
                placeholder: 'Type anything...', hint: 'Any question you want answered' %>

    <%= f.simple_fields_for :items do |i| %>
        <%= i.input :answer,
          placeholder: 'Type anything...', hint: 'An answer to your question you want voted on' %>
        <%= i.link_to_remove "Remove this item", class: 'btn' %>
    <% end %>

    <div class="actions">
      <%= f.link_to_add "Add an item", :items, id: 'new_poll_item_button', class: 'btn' %>
      <%= f.submit id: 'poll_submit_button', class: 'btn btn-primary' %>
    </div>
<% end %>
