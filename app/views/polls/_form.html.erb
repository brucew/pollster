<%= nested_form_for(@poll) do |f| %>
    <% if @poll.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@poll.errors.count, "error") %> prohibited this poll from being saved:</h2>

          <ul>
            <% @poll.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :question %>
      <br/>
      <%= f.text_area :question %>
    </div>

    <%= f.fields_for :items do |i| %>
        <div class="field">
          <%= i.label :answer %>
          <br/>
          <%= i.text_field :answer %>
        </div>
        <%= i.link_to_remove "Remove this item" %>
    <% end %>
    <div>
      <%= f.link_to_add "Add an item", :items, id: 'new_poll_item_button' %>
    </div>

    <div class="actions">
      <%= f.submit id: 'poll_submit_button' %>
    </div>
<% end %>
